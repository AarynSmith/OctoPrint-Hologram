<div id="tab_plugin_hologram">
    <h3>Hologram Tab</h3>
    <h4>Gcode Preview</h4>
    <button data-bind="click: fetchRender">Fetch and Render Image</button>
    <div id="preview-container" style="position: relative;">
        <div data-bind="visible: displayImageUrl">
            <img data-bind="attr: { src: displayImageUrl }" />
        </div>
    </div>
    <h4>SSIM chart</h4>
    <div>
        <img data-bind="attr: { src: ssimChartUrl }" alt="SSIM Chart"/>
    </div>
    
</div>
